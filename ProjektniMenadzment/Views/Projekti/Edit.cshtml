@using ProjektniMenadzment.Models.Domain
@using ProjektniMenadzment.Models.ViewModels

@model EditProjekatRequest

@{
    ViewData["Title"] = "Uredi projekat";
}

<div class="container mt-4">
    <h2 class="mb-4">✏️ Uredi projekat</h2>

    <form asp-action="Edit" method="post">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="mb-3">
            <label asp-for="Naziv" class="form-label"></label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Opis" class="form-label"></label>
            <textarea asp-for="Opis" class="form-control"></textarea>
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option value="Planiran">Planiran</option>
                <option value="U toku">U toku</option>
                <option value="Zavrsen">Zavrsen</option>
                <option value="Otkazan">Otkazan</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Budzet" class="form-label"></label>
            <input asp-for="Budzet" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Budzet" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DatumPocetka" class="form-label"></label>
            <input asp-for="DatumPocetka" class="form-control" type="date" />
            <span asp-validation-for="DatumPocetka" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rok" class="form-label"></label>
            <input asp-for="Rok" class="form-control" type="date" />
            <span asp-validation-for="Rok" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ZanrId" class="form-label">Žanr</label>
            <select asp-for="ZanrId" asp-items="Model.Zanrovi" class="form-select">
                <option value="">-- Izaberi žanr --</option>
            </select>
            <span asp-validation-for="ZanrId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">💾 Sačuvaj izmene</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Otkaži</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
